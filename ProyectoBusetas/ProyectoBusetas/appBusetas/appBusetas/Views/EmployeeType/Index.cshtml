@model IEnumerable<Buseta_DataAccess.EmployeeType>

@{
    ViewBag.Title = "Maintenance Employee Type";
}

<body id="BEmployee">
<h2>Maintenance Employee Type</h2>

<table class="table table-bordered">
    <tr>
        <th>
            <label>Name</label>
        </th>
        <th>
            <label>Description</label>
        </th>
        <th>
            <label>Salary</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
